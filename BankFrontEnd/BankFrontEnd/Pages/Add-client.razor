@page "/add-client"

@using BankFrontEnd.EditForm

<PageTitle>Add Client</PageTitle>

<h3>Add Client</h3>

<EditForm class="col-md-5" Model="@Model">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>
            Firstname
        </label>
        <InputText class="form-control" @bind-Value="Model.Firstname" placeholder="Firstname" />
    </div>

    <div class="form-group">
        <label>
            Lastame
        </label>
        <InputText class="form-control" @bind-Value="Model.Lastname" placeholder="Lastname" />
    </div>

    <div class="form-group">
        <label>
            Date or Birth
        </label>
        <InputDate class="form-control" @bind-Value="Model.Dob" placeholder="Date of birth" />
    </div>

    <div class="form-group">
        <label>
            ID Number
        </label>
        <InputText class="form-control" @bind-Value="Model.IdNumber" placeholder="ID Number" />
    </div>

    <div class="form-group">
        <label>
            Mobile Number
        </label>
        <InputText class="form-control" @bind-Value="Model.MobileNumber" placeholder="Mobile Number" />
    </div>

    <div class="form-group">
        <label>
            Email
        </label>
        <InputText class="form-control" @bind-Value="Model.Email" placeholder="Email" />
    </div>

    <div class="form-group">
        <label>
            Password
        </label>
        <InputText class="form-control" @bind-Value="Model.Password" placeholder="Password" />
    </div>

    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" value="Add Client" />
    </div>
</EditForm>

@code {
    private EditContext? edit;
    private ClientEdit? Model { get; set; }

    protected override void OnInitialized()
    {
        Model ??= new();
        edit = new(Model);
    }
}
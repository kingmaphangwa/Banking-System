@page "/add-account"

@using BankFrontEnd.EditForm

<PageTitle>Add Account</PageTitle>

<h3>Add Account</h3>

<EditForm class="col-md-5" Model="@Model">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <div class="form-group">
        <label>
            Account Type
        </label>
        <InputSelect class="form-control" @bind-Value="Model.Type" placeholder="Username">
            <option value="">Select</option>
            <option value=""></option>
        </InputSelect>
    </div>
    
    <div class="form-group">
        <label>
            Client
        </label>
        <InputSelect class="form-control" @bind-Value="Model.UserId" placeholder="Username">
            <option value="">Select</option>
            <option value=""></option>
        </InputSelect>
    </div>

    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" value="Add Account" />
    </div>
</EditForm>

@code {
    private EditContext? edit;
    private AccountEdit? Model { get; set; }

    protected override void OnInitialized()
    {
        Model ??= new();
        edit = new(Model);
    }
}
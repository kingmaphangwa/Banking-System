@page "/withdraw"

@using BankFrontEnd.EditForm

<PageTitle>Withdraw</PageTitle>

<h3>Withdraw</h3>

<EditForm class="col-md-5" Model="@Model">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>
            Account Number
        </label>
        <InputSelect class="form-control" @bind-Value="Model.AccountNumber" placeholder="Username">
            <option value="">Select</option>
            <option value=""></option>
        </InputSelect>
    </div>

    <div class="form-group">
        <label>
            Amount
        </label>
        <InputNumber class="form-control" @bind-Value="Model.Amount" placeholder="Lastname" />
    </div>

    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" value="withdraw" />
    </div>
</EditForm>

@code {
    private EditContext? edit;
    private BallanceEdit? Model { get; set; }

    protected override void OnInitialized()
    {
        Model ??= new();
        edit = new(Model);
    }
}